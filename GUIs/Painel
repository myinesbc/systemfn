    private java.util.Map<JButton, Double> notasAlunos = new java.util.HashMap<>();
    private double totalSum = 0;
    private void avaliarAluno(JButton botaoRelacionado) {
    Object[] options = {"A1", "A2", "A3"};

    // Inicializa com 0 se não existir ainda
    double totalSum = notasAlunos.getOrDefault(botaoRelacionado, 0.0);

    while (true) {
        int choice = JOptionPane.showOptionDialog(this, "Escolha uma avaliação: ", "Notas",
                JOptionPane.DEFAULT_OPTION, JOptionPane.INFORMATION_MESSAGE, null, options, options[0]);
        if (choice == JOptionPane.CLOSED_OPTION) break;

        JTextField numField = new JTextField();

        ((AbstractDocument) numField.getDocument()).setDocumentFilter(new DocumentFilter() {
            @Override
            public void insertString(FilterBypass fb, int off, String str, AttributeSet attr) throws BadLocationException {
                if (str.matches("[0-9.]+")) super.insertString(fb, off, str, attr);
            }

            @Override
            public void replace(FilterBypass fb, int off, int len, String str, AttributeSet attr) throws BadLocationException {
                if (str.matches("[0-9.]+")) super.replace(fb, off, len, str, attr);
            }
        });

        int res = JOptionPane.showConfirmDialog(this, numField, "Digite um número para " + options[choice], JOptionPane.OK_CANCEL_OPTION);
        if (res == JOptionPane.OK_OPTION && !numField.getText().isEmpty()) {
            try {
                double value = Double.parseDouble(numField.getText());

                if ((choice == 0 || choice == 1) && !(value >= 0 && value <= 30)) {
                    JOptionPane.showMessageDialog(this, "Para " + options[choice] + ", o valor deve estar entre 0 e 30.");
                    continue;
                }
                if (choice == 2 && !(value >= 0 && value <= 40)) {
                    JOptionPane.showMessageDialog(this, "Para A3, o valor deve estar entre 0 e 40.");
                    continue;
                }

                totalSum += value;
                notasAlunos.put(botaoRelacionado, totalSum);
                botaoRelacionado.setText(String.format("%.2f", totalSum));

            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(this, "Número inválido.");
            }
        } else {
            break;
        }
    }

        if (totalSum >= 70) {
            botaoRelacionado.setBackground(java.awt.Color.GREEN);
            JOptionPane.showMessageDialog(this, "O aluno está aprovado! :D");
        } else {
            botaoRelacionado.setBackground(java.awt.Color.RED);
            JOptionPane.showMessageDialog(this, "O aluno foi reprovado. D:");
        }
}
    
    private void jButton13ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        avaliarAluno(jButton13);
    }                                         

    private void jButton14ActionPerformed(java.awt.event.ActionEvent evt) {                                          
